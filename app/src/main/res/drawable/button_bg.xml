<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <!-- Set color to transparent -->
            <solid android:color="#00000000" />
            <!-- Set corner radius to a larger value for round corners -->
            <corners android:radius="200sp" />
        </shape>
    </item>

    <item>
        <!-- Drawable resource -->
        <shape android:shape="rectangle">
            <!-- Set stroke width to a smaller value for a thin border -->
            <stroke android:color="#000000" android:width="1dp"/>
        </shape>
        <!-- Padding values -->
        <layer-padding android:left="10dp"  android:top="1dp"   android:right="10dp"  android:bottom="1dp" />
    </item>

</layer-list>